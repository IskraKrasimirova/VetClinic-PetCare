@model IEnumerable<PetListingViewModel>

<div class="row">
    @foreach (var pet in Model)
    {
        <div class="col-md-4 ">
            <div class="card mb-3" style="width: 16rem">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@pet.Name</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@pet.PetType</li>
                        <li class="list-group-item">@pet.Breed</li>
                        <li class="list-group-item">@pet.DateOfBirth</li>
                        <li class="list-group-item">@pet.Gender</li>
                    </ul>
                    <a asp-controller="Pets" asp-action="Details" asp-route-id="@pet.Id" class="btn btn-outline-primary">View</a>
                    @if (ViewBag.AllowPetEdit == true || User.IsDoctor())
                    {
                        <a asp-controller="Pets" asp-action="Edit" asp-route-id="@pet.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-controller="Pets" asp-action="Delete" asp-route-id="@pet.Id" class="btn btn-outline-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
