@model AllPetsViewModel

@{
    ViewBag.Title = "All Pets";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="PetTypeName"></label>
                <select asp-for="PetTypeName" class="form-control">
                    <option value="">All</option>

                    @foreach (var petType in Model.PetTypes)
                    {
                        <option value="@petType">@petType</option>
                    }
                </select>
            </div>
            <input type="submit" class="btn btn-outline-primary mt-2" value="Search" />
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Dog Basset, etc...">
            <input type="submit" class="btn btn-outline-primary mt-2" value="Search" />
        </div>
    </div>
</form>

<div class="row">
    @foreach (var pet in Model.Pets)
    {
        <div class="col-md-4 ">
            <div class="card mb-3" style="width: 16rem">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@pet.Name</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@pet.PetType</li>
                        <li class="list-group-item">@pet.Breed</li>
                        <li class="list-group-item">@pet.DateOfBirth</li>
                        <li class="list-group-item">@pet.Gender</li>
                        <li class="list-group-item">@pet.Description</li>
                    </ul>
                    <a asp-controller="Pets" asp-action="Details" asp-route-petId="@pet.Id class="btn btn-outline-primary">
                        View More
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Pets.Any())
{
    <h2 class="text-center">No pets found by the given criteria!</h2>
}

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalPets / AllPetsViewModel.PetsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Pets"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-petTypeName="@Model.PetTypeName"
           asp-route-searchTerm="@Model.SearchTerm"><<</a>
    </div>
    
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage || !Model.Pets.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Pets"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-petTypeName="@Model.PetTypeName"
           asp-route-searchTerm="@Model.SearchTerm">>></a>
    </div>
</div>