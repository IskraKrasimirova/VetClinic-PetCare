@model PetFormModel

<div asp-validation-summary="All" class="text-danger"></div>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="PetTypeId"></label>
                <select asp-for="PetTypeId" class="form-control">
                    @foreach (var petType in Model.PetTypes)
                    {
                        <option value="@petType.Id">@petType.Name</option>
                    }
                </select>
                <span asp-validation-for="PetTypeId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Breed"></label>
                <input asp-for="Breed" class="form-control" placeholder="Enter breed">
                <span asp-validation-for="Breed" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" placeholder="@DateTime.UtcNow.Date">
                <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Distinctive features, color, etc..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                    <option value="3">Unknown</option>
                </select>
                <span asp-validation-for="Gender" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save"/>
        </form>
    </div>
</div>
