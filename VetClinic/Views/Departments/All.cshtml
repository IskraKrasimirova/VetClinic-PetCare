@model IEnumerable<DepartmentListingViewModel>

@{
    ViewBag.Title = "All Departments";
}

<div class="row mb-5">
    <h2 class="heading-margin mb-5 text-center">@ViewBag.Title</h2>
    @foreach (var department in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3" style="width: 16rem">
                <img class="card-img-fluid" src="@department.Image" alt="@department.Name Image">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@department.Name</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@department.Description</li>
                    </ul>
                    <a asp-area="" asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn btn-outline-primary">View</a>
                    @if (User.IsAdmin())
                    {
                        <a asp-area="Admin" asp-controller="Departments" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-area="Admin" asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-outline-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>