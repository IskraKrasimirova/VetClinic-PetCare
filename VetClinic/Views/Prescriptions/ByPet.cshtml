@model IEnumerable<PrescriptionServiceModel>

@{
    ViewBag.Title = "Prescriptions";
}

@if (!Model.Any())
{
    ViewBag.Title = null;
    <h2 class="text-center">
        Pet has no prescriptions!
    </h2>
}
else
{
    <h2 class="text-center mb-3">@ViewBag.Title @ViewBag.Pet</h2>
    <table class="table table-bordered table-striped text-center" style="background-color:#80c1ff">
        <thead class="thead-light">
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Department</th>
                <th scope="col">Service</th>
                <th scope="col">Description</th>
                <th scope="col">Doctor</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model)
            {
                <tr>
                    <th scope="row">@prescription.CreatedOn</th>
                    <td>@prescription.DepartmentName</td>
                    <td>@prescription.ServiceName</td>
                    <td>@prescription.Description</td>
                    <td>@prescription.DoctorFullName</td>
                    <td><a asp-controller="Prescriptions" 
                        asp-action="Details" 
                        asp-route-appointmentId="@prescription.AppointmentId"
                        class="btn btn-primary btn-sm mb-3 mt-3">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

