@{
    ViewBag.Title = "Home";
}

<div class="text-center">
    @if (ViewBag.ClientFullName != null)
    {
        <h1 class="display-4">Welcome, @ViewBag.ClientFullName!</h1>
    }
    else
    {
        <h1 class="display-4">Welcome!</h1>
        <h2 class="display-4">We Care Your Pets</h2>
    }
    <img src="~/img/start4.jpg" class="img-fluid mt-3" alt="Pet Care image">
    @if (User.IsClient())
    {
        <a asp-controller="Appointments" asp-action="Mine" class="btn btn-outline-primary mb-5 mt-5">
            Check your appointments
        </a>
    }
</div>
