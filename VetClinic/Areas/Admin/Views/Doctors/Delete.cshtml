@model DoctorDetailsServiceModel

@{
    ViewBag.Title = "Delete Doctor";
}

<h3 class="text-center mb-5">
    <strong>Are you sure you want to delete Doctor @Model.FullName?</strong>
</h3>
<div class="col-lg-8 col-md-12 offset-lg-2 ">
    <div class="card mb-5" style="width: 36rem">
        <div class="card-body text-center">
            <h3 class="card-title text-center mb-5">@Model.FullName</h3>
            <img class="d-block img-fluid mx-auto mb-5" src="@Model.ProfileImage" alt="@Model.FullName Image">
            <ul class="list-group list-group-flush">
                <li class="list-group-item mb-3">Department: @Model.Department</li>
                <li class="list-group-item mb-3">@Model.Description</li>
                <li class="list-group-item mb-3">
                    <i class="fas fa-envelope fa-lg text-dark"></i> @Model.Email
                </li>
                <li class="list-group-item mb-5">
                    <span class="fas fa-phone fa-lg text-dark"></span> @Model.PhoneNumber
                </li>
            </ul>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-3 mt-3">
                <form method="post">
                    <button type="submit" class="btn btn-outline-danger" asp-controller="Doctors" asp-action="DeleteDoctor" asp-route-id="@Model.Id">
                        Delete
                    </button>
                </form>
                <a class="btn btn-outline-primary" asp-area="" asp-controller="Doctors" asp-action="All">Back</a>
            </div>
        </div>
    </div>
</div>
